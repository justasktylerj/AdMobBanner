<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    tools:ignore="MergeRootFrame">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click for pineapples"
        android:id="@+id/pineApples"
        android:layout_above="@+id/ad_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp" />

    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ad_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pinePic"
        android:adjustViewBounds="true"
        android:src="@drawable/pine"
        android:layout_above="@+id/pineApples"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Achievments"
        android:id="@+id/AchieveButton"
        android:layout_above="@+id/ad_view"
        android:layout_toLeftOf="@+id/pinePic"
        android:layout_toStartOf="@+id/pinePic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PineApples: 0"
        android:id="@+id/count"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/AchieveButton"
        android:layout_alignStart="@+id/AchieveButton" />
</RelativeLayout>
